// /prisma/schema.prisma
// This schema is configured based on Vercel's "Prisma Postgres" integration documentation.
// It assumes Vercel's build environment can handle 'prisma migrate deploy'
// using the DATABASE_URL (which is your Prisma Accelerate URL) provided by this specific integration.

datasource db {
  provider     = "postgresql"
  // As per Vercel's "Prisma Postgres" integration, this DATABASE_URL will be your Accelerate URL.
  // We are relying on Vercel's build environment to handle 'prisma migrate deploy' correctly with this.
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Transaction {
  id            String              @id @default(cuid())
  type          TransactionEnumType
  date          DateTime
  amount        Decimal
  description   String
  category      String?
  paymentMethod String?
  expenseType   ExpenseEnumType?
  source        String?
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
}

enum TransactionEnumType {
  income
  expense
}

enum ExpenseEnumType {
  need
  want
  investment_expense
}
