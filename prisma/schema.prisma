// /prisma/schema.prisma
datasource db {
  provider     = "postgresql"
  // url is used by Prisma Client, potentially with Accelerate
  url          = env("DATABASE_URL")
  // directUrl is used by Prisma Migrate for schema changes
  directUrl    = env("POSTGRES_URL_NON_POOLING")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Transaction {
  id            String              @id @default(cuid())
  type          TransactionEnumType
  date          DateTime
  amount        Decimal
  description   String
  category      String?
  paymentMethod String?
  expenseType   ExpenseEnumType?
  source        String?
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
}

enum TransactionEnumType {
  income
  expense
}

enum ExpenseEnumType {
  need
  want
  investment_expense
}
