// /prisma/schema.prisma
datasource db {
  provider     = "postgresql"
  // url for Prisma Client (will use Accelerate via DATABASE_URL env var)
  url          = env("DATABASE_URL")
  // directUrl for migrations (must be a direct, non-pooled connection via POSTGRES_URL_NON_POOLING env var)
  directUrl    = env("POSTGRES_URL_NON_POOLING")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
  // Default output path is node_modules/.prisma/client
  // Using a custom output like "/app/generated/prisma-client" is generally for specific Vercel setups
  // and not needed for standard Next.js apps. We'll stick to the default.
}

model Transaction {
  id            String              @id @default(cuid())
  type          TransactionEnumType
  date          DateTime
  amount        Decimal
  description   String
  category      String?
  paymentMethod String?
  expenseType   ExpenseEnumType?
  source        String?
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
}

enum TransactionEnumType {
  income
  expense
}

enum ExpenseEnumType {
  need
  want
  investment_expense
}
