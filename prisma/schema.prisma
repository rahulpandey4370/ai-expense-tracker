// /prisma/schema.prisma
datasource db {
  provider     = "postgresql"
  // These environment variables (POSTGRES_PRISMA_URL and POSTGRES_URL_NON_POOLING)
  // are automatically provided by Vercel when a Vercel Postgres database is connected to the project.
  // Ensure they are correctly set in your Vercel project's Environment Variable settings.
  // POSTGRES_PRISMA_URL is typically used by the Prisma Client for queries.
  url          = env("POSTGRES_PRISMA_URL")
  // POSTGRES_URL_NON_POOLING is a direct, non-pooled connection string ESSENTIAL for migrations (prisma migrate deploy).
  directUrl    = env("POSTGRES_URL_NON_POOLING")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Transaction {
  id            String              @id @default(cuid())
  type          TransactionEnumType
  date          DateTime
  amount        Decimal // Prisma handles mapping this to a numeric type in Postgres
  description   String
  category      String?
  paymentMethod String?
  expenseType   ExpenseEnumType?
  source        String?
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
}

enum TransactionEnumType {
  income
  expense
}

enum ExpenseEnumType {
  need
  want
  investment_expense
}
