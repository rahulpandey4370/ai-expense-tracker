datasource db {
  provider     = "postgresql"
  // Vercel automatically provides POSTGRES_PRISMA_URL for the query engine.
  // This can be a pooled connection string or an Accelerate URL if you've configured Accelerate.
  url          = env("POSTGRES_PRISMA_URL")

  // Vercel automatically provides POSTGRES_URL_NON_POOLING for a direct, non-pooled connection.
  // This is ESSENTIAL for `prisma migrate deploy` to work.
  directUrl    = env("POSTGRES_URL_NON_POOLING")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Transaction {
  id            String              @id @default(cuid())
  type          TransactionEnumType
  date          DateTime
  amount        Decimal // Using Decimal for precision
  description   String
  category      String?
  paymentMethod String?
  expenseType   ExpenseEnumType?
  source        String?
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
}

enum TransactionEnumType {
  income
  expense
}

enum ExpenseEnumType {
  need
  want
  investment_expense
}
