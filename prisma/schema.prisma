generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // For Prisma Client with Accelerate
  directUrl = env("POSTGRES_URL_NON_POOLING") // For migrations
}

model Category {
  id           String        @id @default(cuid())
  name         String        @unique // Assuming category names should be unique
  type         String // "income" or "expense"
  transactions Transaction[]
}

model PaymentMethod {
  id           String        @id @default(cuid())
  name         String        @unique // Assuming payment method names should be unique
  type         String // e.g., "Credit Card", "UPI", "Cash"
  transactions Transaction[]
}

model Transaction {
  id              String    @id @default(cuid()) // Changed to cuid for consistency
  type            String // "income" or "expense"
  date            DateTime
  amount          Float // Prisma maps Float to double precision in Postgres
  description     String?
  categoryId      String?
  paymentMethodId String?
  source          String?   // For income source, if category isn't detailed enough
  expenseType     String? // "need", "want", "investment_expense" for expenses
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  category      Category?      @relation(fields: [categoryId], references: [id])
  paymentMethod PaymentMethod? @relation(fields: [paymentMethodId], references: [id])

  @@index([date])
}
