// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("POSTGRES_PRISMA_URL") // For Prisma Client queries
  directUrl    = env("POSTGRES_URL_NON_POOLING") // For Prisma Migrate
  relationMode = "prisma"
}

model Transaction {
  id            String             @id @default(cuid())
  type          TransactionEnumType
  date          DateTime
  amount        Decimal // Use Decimal for monetary values
  description   String
  category      String?
  paymentMethod String?
  expenseType   ExpenseEnumType?
  source        String?
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
}

enum TransactionEnumType {
  income
  expense
}

enum ExpenseEnumType {
  need
  want
  investment_expense
}