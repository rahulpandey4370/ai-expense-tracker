// /prisma/schema.prisma
datasource db {
  provider     = "postgresql"
  // DATABASE_URL will be your Accelerate URL from Vercel env vars
  url          = env("DATABASE_URL")
  // POSTGRES_URL_NON_POOLING is your direct DB connection for migrations from Vercel env vars
  directUrl    = env("POSTGRES_URL_NON_POOLING")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Transaction {
  id            String              @id @default(cuid())
  type          TransactionEnumType
  date          DateTime
  amount        Decimal
  description   String
  category      String?
  paymentMethod String?
  expenseType   ExpenseEnumType?
  source        String?
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
}

enum TransactionEnumType {
  income
  expense
}

enum ExpenseEnumType {
  need
  want
  investment_expense
}
