// /prisma/schema.prisma

// Datasource block configured to use DATABASE_URL,
// which Vercel's "Prisma Postgres" integration should set to your Accelerate URL.
// Vercel's build environment is expected to handle migrations with this URL.
datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL") // Set by Vercel's Prisma Postgres integration
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
  // Output path defaults to node_modules/.prisma/client
  // The Vercel example output: "/app/generated/prisma-client" is for specific build environments,
  // sticking to default is safer unless known to be required.
}

model Transaction {
  id            String              @id @default(cuid())
  type          TransactionEnumType
  date          DateTime
  amount        Decimal
  description   String
  category      String?
  paymentMethod String?
  expenseType   ExpenseEnumType?
  source        String?
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
}

enum TransactionEnumType {
  income
  expense
}

enum ExpenseEnumType {
  need
  want
  investment_expense
}
